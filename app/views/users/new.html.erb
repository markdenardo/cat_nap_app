<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style="color: red"><%= error%></p>
    <%end%>
<%end%>

<%= form_for @user do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name %>

    <%= f.submit%>
<%end%>
